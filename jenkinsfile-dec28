pipeline{
	agent any
	tools{
	  maven "maven3.9.9"
	}

  stages{
	stage('clone from scm'){
	  steps{
	  sh "echo jenkins should clone from scm"
	  git branch: 'dev28', url: 'https://github.com/Onomeing/liontech-online-library-web-app.git'
	  }
	}

    stage('maven build'){
	  steps{
	  sh "echo 'run junit test on the sc'"
	  sh "echo 'maven is packaging the source code'"
	  sh "mvn test"
	  sh "mvn install"
	  sh "mvn validate"
	  sh "mvn clean package"
	  }
	}

     //stage('code quality analysis'){
	    //steps{
	      //sh "echo 'sonaeqube code quality inspection'"
	      //sh "mvn sonar:sonar"
	    //}
	  //}

    stage('upload artifact to nexus'){
	  steps{
	  sh "mvn deploy"
	  }
	}

    stage('deploy to prod'){
	  steps{
	  sh "echo 'deploy to prod environment'"
	  deploy adapters: [tomcat9(credentialsId: 'tomcat-credentials', path: '', url: 'http://18.117.102.203:8009/manager/html')], contextPath: 'dec28-pipeline', war: 'target/*.war'
	  }
	}
  }
}
